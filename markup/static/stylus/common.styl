// Common styles of the project

html,
body
  height 100%

.wrapper
  display flex
  flex-direction column
  max-width 1920px
  height 100%
  margin 0 auto

.content
  flex 1 0 auto

.page-footer
  flex 0 0 auto
  margin-top 37px
  
.container
  max-width 1160px
  margin 0 auto
  padding 0 20px
  
img
  width 100%
  height auto
  
@media(max-width 480px)
  .container
    padding 0 10px
    
  .page-footer
    &--inner
      margin-top 0
