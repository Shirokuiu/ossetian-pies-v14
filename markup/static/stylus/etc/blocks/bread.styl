.bread
  margin-bottom 12px
  padding 12px 4.69%;
  
  background-color #FFF5F5
  ul
    reset-list()
    
    display flex
    li
      display flex
      align-items center
      margin-right 10px
      &:last-child
        margin-right 0
      a
        font('Muller', 16px, 400, #465C5C, true)
        
        display block
        &:hover
          color #FF3C38
          text-decoration underline
      span
        display block
        width 10px
        height 10px
        margin-left 10px
        .icon
          display block
          width 10px
          height 10px
          
          fill #000000
          
@media(max-width 1180px)
  .bread
    padding-left: 20px;
    padding-right: 20px;
    
@media(max-width 480px)
  .bread
    padding-left: 10px;
    padding-right: 10px;
    
@media(max-width 375px)
  .bread ul
    flex-direction column
    
    
    
    
    
    
    
    
    
    
    
    
    