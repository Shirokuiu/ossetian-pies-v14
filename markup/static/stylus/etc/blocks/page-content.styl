.page-content__goods-container
  display flex
  flex-wrap wrap
  max-width 1740px
  margin 0 auto
  
.page-content__order
  display flex
  flex-direction column
  min-height 822px
  margin-bottom 40px
  padding: 0 5%;
  
  background-image url('%=static=%content/order-bg.jpg')
  background-repeat no-repeat
  background-size cover
  a
    font('Muller', 22px, 500, #333333, true)
    
    box-sizing border-box
    display inline-block
    min-width 350px
    margin 0 auto
    margin-bottom 52px
    padding 17px 5px
    
    text-align center
    
    background-color #FFDB4D
    box-shadow: 0px 3px 5px 0px rgba(0,0,0,0.5);
    
    border-radius 60px
    
    transition 0.2s ease
    &:hover
      background-color #FDA800
  .row
    display flex
    justify-content space-between
    margin auto 0
    ul
      reset-list()
      li
        display flex
        align-items center
        margin-bottom 50px
        &:last-child
          margin-bottom 0
        span
          display block
          width 10px
          height 10px
          margin-right 15px
          
          background-color #FFFFFF
          
          border-radius 50%
        p
          font('Muller', 32px, 500, #FFFFFF)
          
          position relative
          
          padding-bottom 2px
          &::after
            content ''
            
            position absolute
            left 0
            bottom 0
            
            width 100%
            height 1px
            
            background-color rgba(#FFFFFF, 0.5)
            
@media(max-width 1760px)
  .page-content__goods-container
    padding: 0 10px;
    
@media(max-width 1530px)
  .page-content__order
    min-height: 702px;
    
@media(max-width 1370px)
  .page-content__order
    padding: 0 15px;
    min-height: auto;
    padding-top: 80px;
    padding-bottom: 130px;
    position: relative;
    
  .page-content__order .row
    justify-content: space-between;
    
  .page-content__order .row ul li
    margin-bottom: 17px;
    
  .page-content__order .row ul li span
    width: 7px;
    height: 7px;
    margin-right: 10px;
    
  .page-content__order .row ul li p
    font-size: 18px;
    line-height: 22px;
    
  .page-content__order a
    padding: 7px 5px;
    position: absolute;
    left: 0;
    right: 0;
    margin: auto;
    bottom: 20px;
    width: 200px;
    
@media(max-width 1000px)
  .page-content__order
    background-image url('%=static=%content/order-bg-tablet.jpg')
    
@media(max-width 768px)
  .page-content__order
    padding-top: 32px;
    padding-bottom: 80px;
    
@media(max-width 630px)
  .page-content__order
    background-image url('%=static=%content/order-bg-mobile.jpg')
    padding-top: 20px;
    padding-bottom: 10px;
    
  .page-content__order .row
    flex-direction: column;
    margin-bottom: 20px;
    
  .page-content__order .row ul
    display flex
    flex-direction column
    align-items center
    margin-bottom: 17px;
    &:last-child
      margin-bottom 0
      
  .page-content__order .row ul li span
    display none
      
  .page-content__order a
    position static
    
@media(max-width 420px)
  .page-content__order a
    width: 100%;
    min-width: inherit;
  
  
  
  
  
  
  
  
  
  
  
  
            
            
            
            
            